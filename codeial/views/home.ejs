    <textarea
      name="content"
      id=""
      cols="30"
      rows="3"
      placeholder="Type here..."
      required
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <%}%>
  <div class="posts-list-container">
    <ul>
      <% for(post of posts) {%> <%- include('_post')%> <%}%>
    </ul>
  </div>
</section>

<section id="user-friends">
  <h4>Friends</h4>

  <% for(u of all_users){%>

  <p>
    <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
  </p>

  <%}%>
</section>
