<section id="feed-posts">
  <h4>Posts</h4>
  <form action="/posts/create" method="post" id="new-post-form">
    <textarea
      name="content"
      id=""
      cols="30"
      rows="3"
      placeholder="Type here..."
    ></textarea>
    <input type="submit" value="Post" />
  </form>

  <div class="posts-list-container">
    <ul>
      <% for(post of posts) {%>

      <li>
        <p>
          <%=post.content%>
          <br />
          <small>
            <%=post.user.name%>
          </small>
        </p>
      </li>
      <%}%>
    </ul>
  </div>
</section>
